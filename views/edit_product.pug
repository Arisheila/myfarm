extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/edit/'+article._id)
    .form-group
      label name:
      input.form-control(name='title', type='text', value=product.name)
    .form-group
      label name:
      input.form-control(name='author', type='text', value=product.price)
    .form-group
      label type:
      input.form-control(name='body', type='text', value=product.type)
    br
    input.btn.btn-primary(type='submit', value='Submit')
